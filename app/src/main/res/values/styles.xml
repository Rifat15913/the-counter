<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorSecondary</item>
        <item name="colorControlActivated">@color/colorSecondary</item>
        <item name="colorControlHighlight">@color/colorSecondary</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="textAppearanceLargePopupMenu">@style/PopupMenuTextAppearanceLarge</item>
        <item name="textAppearanceSmallPopupMenu">@style/PopupMenuTextAppearanceSmall</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:background">@drawable/splash_screen</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/colorTextRegular</item>
        <item name="android:textColorHint">@color/colorTextLight</item>
    </style>

    <style name="ButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="PopupMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/colorDashboardItemDarkBackground</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
    </style>

    <style name="PopupMenuTextAppearanceSmall" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textSize">@dimen/text_small_body</item>
    </style>

    <style name="PopupMenuTextAppearanceLarge" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textSize">@dimen/text_small_body</item>
    </style>

    <style name="AppTheme.GradientStatusBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>
    </style>

    <style name="Authentication">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Authentication.TextInputLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">@dimen/margin_32</item>
        <item name="android:layout_marginEnd">@dimen/margin_32</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
    </style>

    <style name="Authentication.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/text_small_body</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorTextRegular</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:padding">@dimen/padding_16</item>
    </style>

    <style name="MyAppointments.Tab.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BottomBar.Item.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_small_body</item>
        <item name="android:fontFamily">@font/semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppButton">
        <item name="android:layout_width">@dimen/margin_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/semi_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_16</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/elevation_2</item>
    </style>

    <style name="AppButton.Common">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/colorTextRegular</item>
        <item name="android:background">@drawable/background_common_button</item>
    </style>

    <style name="AppButton.Accent">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/colorTextRegular</item>
        <item name="android:background">@drawable/background_accent_button</item>
    </style>

    <style name="AppComponent" />

    <style name="AppComponent.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppComponent.TextView.Title">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_32</item>
        <item name="fontFamily">@font/semi_bold</item>
        <item name="android:textColor">@color/colorTextTitle</item>
        <item name="android:maxLines">@integer/single_line</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_large_body</item>
        <item name="android:padding">@dimen/padding_16</item>
    </style>

    <style name="AppComponent.TextView.Subtitle">
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textColor">@color/colorTextRegularSecondary</item>
        <item name="android:textSize">@dimen/text_small_body</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorTextRegularSecondary</item>
        <item name="android:textColorPrimary">@color/colorTextRegularSecondary</item>
        <item name="android:fontFamily">@font/medium</item>
    </style>

</resources>
