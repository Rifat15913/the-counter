<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8"
        app:cardBackgroundColor="@color/colorPricingPanelItemBackground"
        app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_16">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_point"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_16"
                android:drawablePadding="@dimen/padding_8"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:maxLines="@integer/single_line"
                android:singleLine="true"
                android:textColor="@color/colorTextRegular"
                android:textSize="@dimen/text_body"
                app:fontFamily="@font/semi_bold"
                app:layout_constraintBottom_toTopOf="@+id/text_view_cash"
                app:layout_constraintEnd_toStartOf="@+id/image_view_bank_receipt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintVertical_chainStyle="packed"
                app:textAllCaps="true"
                tools:text="Point: 1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_view_bank_receipt"
                android:layout_width="@dimen/width_40"
                android:layout_height="@dimen/height_40"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toTopOf="@+id/view_separator"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/text_view_point"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_generic_photo_placeholder" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_cash"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_16"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:maxLines="@integer/single_line"
                android:singleLine="true"
                android:textColor="@color/colorTextRegularSecondary"
                android:textSize="@dimen/text_small_body"
                app:fontFamily="@font/semi_bold"
                app:layout_constraintBottom_toTopOf="@+id/text_view_bank_details"
                app:layout_constraintEnd_toStartOf="@+id/image_view_bank_receipt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_point"
                app:textAllCaps="false"
                tools:text="Cash: 1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_bank_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_16"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:maxLines="@integer/single_line"
                android:singleLine="true"
                android:textColor="@color/colorTextRegularSecondary"
                android:textSize="@dimen/text_small_body"
                app:fontFamily="@font/semi_bold"
                app:layout_constraintBottom_toTopOf="@+id/text_view_status"
                app:layout_constraintEnd_toStartOf="@+id/image_view_bank_receipt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_cash"
                app:textAllCaps="false"
                tools:text="Bank: Demo bank" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_16"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:maxLines="@integer/single_line"
                android:singleLine="true"
                android:textColor="@color/colorTextRegularSecondary"
                android:textSize="@dimen/text_small_body"
                app:fontFamily="@font/semi_bold"
                app:layout_constraintBottom_toTopOf="@+id/text_view_admin_message"
                app:layout_constraintEnd_toStartOf="@+id/image_view_bank_receipt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_bank_details"
                app:textAllCaps="false"
                tools:text="Status: User Pending" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_admin_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_16"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:singleLine="false"
                android:textColor="@color/colorTextRegularSecondary"
                android:textSize="@dimen/text_small_body"
                app:fontFamily="@font/semi_bold"
                app:layout_constraintBottom_toTopOf="@+id/view_separator"
                app:layout_constraintEnd_toStartOf="@+id/image_view_bank_receipt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_status"
                app:textAllCaps="false"
                tools:text="Admin Message: Hello" />

            <View
                android:id="@+id/view_separator"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginBottom="@dimen/margin_16"
                android:background="@color/colorMyWalletsTabSeparator"
                app:layout_constraintBottom_toTopOf="@+id/text_view_approve"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_admin_message" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_approve"
                android:layout_width="@dimen/width_120"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_gradient_green_with_corner"
                android:gravity="center"
                android:paddingStart="@dimen/padding_24"
                android:paddingTop="@dimen/padding_12"
                android:paddingEnd="@dimen/padding_24"
                android:paddingBottom="@dimen/padding_12"
                android:text="@string/point_activity_approve"
                android:textColor="@color/colorTextRegular"
                android:textSize="@dimen/text_small_body"
                app:fontFamily="@font/bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/text_view_reject"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_separator"
                app:textAllCaps="true" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_reject"
                android:layout_width="@dimen/width_120"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16"
                android:background="@drawable/rectangle_gradient_red_with_corner"
                android:gravity="center"
                android:visibility="gone"
                android:paddingStart="@dimen/padding_24"
                android:paddingTop="@dimen/padding_12"
                android:paddingEnd="@dimen/padding_24"
                android:paddingBottom="@dimen/padding_12"
                android:text="@string/point_activity_reject"
                android:textColor="@color/colorTextRegular"
                android:textSize="@dimen/text_small_body"
                app:fontFamily="@font/bold"
                app:layout_constraintBottom_toBottomOf="@+id/text_view_approve"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/text_view_approve"
                app:layout_constraintTop_toTopOf="@+id/text_view_approve"
                app:textAllCaps="true" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>