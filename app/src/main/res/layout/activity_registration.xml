<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/common_background"
        android:focusableInTouchMode="true">

        <com.diaryofrifat.thecounter.main.ui.base.widget.CustomStatusBarView
            android:id="@+id/status_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            app:layout_constraintBottom_toTopOf="@+id/scroll_view_body_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view_body_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/status_bar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_view_title"
                    style="@style/AppComponent.TextView.Title"
                    android:text="@string/registration_title"
                    app:layout_constraintBottom_toTopOf="@+id/image_view_logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintVertical_chainStyle="packed"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_view_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_logo_with_text"
                    app:layout_constraintBottom_toTopOf="@+id/text_input_layout_first_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_title"
                    app:layout_constraintVertical_chainStyle="packed"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_layout_first_name"
                    style="@style/Authentication.TextInputLayout"
                    android:layout_marginTop="@dimen/margin_32"
                    app:layout_constraintBottom_toTopOf="@+id/text_input_layout_last_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/image_view_logo">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_first_name"
                        style="@style/Authentication.TextInputEditText"
                        android:drawableEnd="@drawable/ic_user"
                        android:inputType="textPersonName"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_layout_last_name"
                    style="@style/Authentication.TextInputLayout"
                    android:layout_marginTop="@dimen/margin_8"
                    app:layout_constraintBottom_toTopOf="@+id/text_input_layout_email"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_input_layout_first_name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_last_name"
                        style="@style/Authentication.TextInputEditText"
                        android:drawableEnd="@drawable/ic_user"
                        android:inputType="textPersonName"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_layout_email"
                    style="@style/Authentication.TextInputLayout"
                    android:layout_marginTop="@dimen/margin_8"
                    app:layout_constraintBottom_toTopOf="@+id/text_input_layout_password"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_input_layout_last_name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_email"
                        style="@style/Authentication.TextInputEditText"
                        android:drawableEnd="@drawable/ic_email"
                        android:inputType="textEmailAddress"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_layout_password"
                    style="@style/Authentication.TextInputLayout"
                    android:layout_marginTop="@dimen/margin_8"
                    app:layout_constraintBottom_toTopOf="@+id/text_input_layout_confirm_password"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_input_layout_email"
                    app:passwordToggleEnabled="false"
                    app:passwordToggleTint="@color/colorPasswordToggle">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_password"
                        style="@style/Authentication.TextInputEditText"
                        android:drawableEnd="@drawable/ic_lock"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_layout_confirm_password"
                    style="@style/Authentication.TextInputLayout"
                    android:layout_marginTop="@dimen/margin_8"
                    app:layout_constraintBottom_toTopOf="@+id/constraint_layout_password_strength_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_input_layout_password"
                    app:passwordToggleEnabled="false"
                    app:passwordToggleTint="@color/colorPasswordToggle">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_confirm_password"
                        style="@style/Authentication.TextInputEditText"
                        android:drawableEnd="@drawable/ic_lock"/>

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_layout_password_strength_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/padding_4"
                    android:paddingEnd="@dimen/padding_4"
                    app:layout_constraintStart_toStartOf="@+id/text_input_layout_confirm_password"
                    app:layout_constraintEnd_toEndOf="@+id/text_input_layout_confirm_password"
                    app:layout_constraintTop_toBottomOf="@+id/text_input_layout_confirm_password"
                    app:layout_constraintBottom_toTopOf="@+id/text_view_register">

                    <View
                        android:id="@+id/view_color_weak"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_8"
                        android:layout_marginStart="@dimen/margin_0"
                        android:layout_marginEnd="@dimen/margin_4"
                        android:visibility="gone"
                        app:layout_constraintEnd_toStartOf="@+id/view_color_normal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/text_view_weak"
                    />

                    <View
                        android:id="@+id/view_color_normal"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_8"
                        android:layout_marginStart="@dimen/margin_4"
                        android:layout_marginEnd="@dimen/margin_4"
                        android:visibility="gone"
                        app:layout_constraintStart_toEndOf="@+id/view_color_weak"
                        app:layout_constraintEnd_toStartOf="@+id/view_color_strong"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/text_view_normal"
                    />

                    <View
                        android:id="@+id/view_color_strong"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_8"
                        android:layout_marginStart="@dimen/margin_4"
                        android:layout_marginEnd="@dimen/margin_0"
                        app:layout_constraintStart_toEndOf="@+id/view_color_normal"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/text_view_strong"
                    />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_view_weak"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_8"
                        android:layout_marginStart="@dimen/margin_0"
                        android:layout_marginEnd="@dimen/margin_4"
                        android:textColor="@color/colorTextRegularSecondary"
                        android:visibility="gone"
                        android:textSize="@dimen/text_small_body"
                        android:text="@string/registration_weak"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/text_view_normal"
                        app:layout_constraintTop_toBottomOf="@+id/view_color_weak"
                        app:layout_constraintBottom_toBottomOf="parent"
                    />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_view_normal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/margin_8"
                        android:layout_marginStart="@dimen/margin_4"
                        android:layout_marginEnd="@dimen/margin_4"
                        android:text="@string/registration_normal"
                        android:textColor="@color/colorTextRegularSecondary"
                        android:textSize="@dimen/text_small_body"
                        app:layout_constraintStart_toEndOf="@+id/text_view_weak"
                        app:layout_constraintEnd_toStartOf="@+id/text_view_strong"
                        app:layout_constraintTop_toBottomOf="@+id/view_color_normal"
                        app:layout_constraintBottom_toBottomOf="parent"
                    />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_view_strong"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_8"
                        android:layout_marginStart="@dimen/margin_4"
                        android:layout_marginEnd="@dimen/margin_0"
                        android:text="@string/registration_strong"
                        android:textColor="@color/colorTextRegularSecondary"
                        android:textSize="@dimen/text_small_body"
                        app:layout_constraintStart_toEndOf="@+id/text_view_normal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view_color_strong"
                        app:layout_constraintBottom_toBottomOf="parent"
                    />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinner_bank_country"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="44dp"
                    android:layout_marginEnd="@dimen/margin_20"
                    app:layout_constraintBottom_toTopOf="@+id/text_view_register"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraint_layout_password_strength_container" />

                <View
                    android:id="@+id/view_separator"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="36dp"
                    android:background="@color/colorSecondary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/spinner_bank_country" />

                <TextView
                    android:id="@+id/text_view_register"
                    style="@style/AppButton.Accent"
                    android:layout_marginStart="@dimen/margin_32"
                    android:layout_marginTop="@dimen/margin_32"
                    android:layout_marginEnd="@dimen/margin_32"
                    android:text="@string/registration_sign_up"
                    app:layout_constraintBottom_toTopOf="@+id/constraint_layout_have_account_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/spinner_bank_country" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_layout_have_account_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_16"
                    android:padding="@dimen/padding_16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_register">

                    <TextView
                        android:id="@+id/text_view_have_an_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_4"
                        android:fontFamily="@font/regular"
                        android:gravity="center"
                        android:text="@string/registration_already_have_an_account"
                        android:textAllCaps="false"
                        android:textColor="@color/colorTextRegular"
                        android:textSize="@dimen/text_body"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/text_view_sign_in"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/text_view_sign_in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_4"
                        android:fontFamily="@font/medium"
                        android:gravity="center"
                        android:text="@string/registration_login"
                        android:textAllCaps="false"
                        android:textColor="@color/colorTextRegular"
                        android:textSize="@dimen/text_body"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/text_view_have_an_account"
                        app:layout_constraintTop_toTopOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>