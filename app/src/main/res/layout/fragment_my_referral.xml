<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/coordinator_layout_bottom_app_bar_container"
            android:layout_width="0dp"
            android:layout_height="96dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/view_background">

            <com.google.android.material.bottomappbar.BottomAppBar
                android:id="@+id/bottom_app_bar"
                style="@style/Widget.MaterialComponents.BottomAppBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:fabAlignmentMode="center"
                app:fabCradleMargin="8dp"
                app:backgroundTint="@color/colorShapedBackground"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_my_referral_top"
                app:fabCustomSize="70dp"
                app:maxImageSize="70dp"
                app:elevation="@dimen/elevation_2"
                app:layout_anchor="@+id/bottom_app_bar"/>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <View android:id="@+id/view_background"
              android:layout_width="0dp" android:layout_height="0dp"
              android:background="@color/colorShapedBackground"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/coordinator_layout_bottom_app_bar_container"/>

        <include
            android:id="@+id/layout_share_my_referral"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/coordinator_layout_bottom_app_bar_container"
            app:layout_constraintBottom_toTopOf="@+id/edit_text_url"
            layout="@layout/item_share_my_referral"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_text_url"
            android:layout_width="@dimen/margin_0"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semi_bold"
            android:gravity="center"
            android:padding="@dimen/padding_16"
            android:background="@drawable/border_color_green_with_corners"
            android:textColor="@color/colorTextRegular"
            android:layout_marginTop="@dimen/margin_32"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_32"
            android:textSize="@dimen/text_small_body"
            app:textAllCaps="false"
            android:maxLines="@integer/single_line"
            android:singleLine="true"
            android:focusableInTouchMode="false"
            android:cursorVisible="false"
            android:focusable="false"
            tools:text="https://example.com"
            app:layout_constraintBottom_toTopOf="@+id/text_view_copy_url"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_share_my_referral"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_copy_url"
            android:layout_width="@dimen/width_200"
            android:layout_height="wrap_content"
            style="@style/AppButton.Common"
            android:text="@string/my_referral_copy_url"
            android:padding="@dimen/padding_12"
            android:textSize="@dimen/text_small_body"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_url"
            app:layout_constraintVertical_bias="0.75"
            app:layout_constraintVertical_chainStyle="packed"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>