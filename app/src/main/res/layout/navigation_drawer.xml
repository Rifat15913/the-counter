<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorDarkBackground">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_drawer_closer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_8"
            android:layout_margin="@dimen/margin_16"
            android:src="@drawable/ic_cross"
            app:layout_constraintBottom_toBottomOf="@+id/image_view_horizontal_logo"
            app:layout_constraintEnd_toStartOf="@+id/image_view_horizontal_logo"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/image_view_horizontal_logo"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_horizontal_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_55"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_horizontal_app_logo"
            app:layout_constraintBottom_toTopOf="@+id/recycler_view_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_menu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_view_horizontal_logo"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>