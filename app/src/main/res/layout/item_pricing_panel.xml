<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8"
        app:cardBackgroundColor="@color/colorPricingPanelItemBackground"
        app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_16">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_16"
                android:drawableStart="@drawable/ic_cup"
                android:drawablePadding="@dimen/padding_8"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:maxLines="@integer/single_line"
                android:singleLine="true"
                android:textColor="@color/colorTextRegular"
                android:textSize="@dimen/text_body"
                app:fontFamily="@font/semi_bold"
                app:layout_constraintBottom_toTopOf="@+id/text_view_price"
                app:layout_constraintEnd_toStartOf="@+id/text_view_action"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintVertical_chainStyle="packed"
                app:textAllCaps="true"
                tools:text="Basic" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_action"
                android:layout_width="@dimen/width_150"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_gradient_green_with_corner"
                android:gravity="center"
                android:paddingTop="@dimen/padding_12"
                android:paddingBottom="@dimen/padding_12"
                android:textColor="@color/colorTextRegular"
                android:textSize="@dimen/text_small_body"
                app:fontFamily="@font/bold"
                app:layout_constraintBottom_toTopOf="@+id/view_separator"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/text_view_title"
                app:layout_constraintTop_toTopOf="parent"
                app:textAllCaps="true"
                tools:text="Buy now" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_16"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:maxLines="@integer/single_line"
                android:singleLine="true"
                android:textColor="@color/colorTextRegularSecondary"
                android:textSize="@dimen/text_small_body"
                app:fontFamily="@font/semi_bold"
                app:layout_constraintBottom_toTopOf="@+id/text_view_speed"
                app:layout_constraintEnd_toStartOf="@+id/text_view_action"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_title"
                app:textAllCaps="false"
                tools:text="Price: $200/Yearly" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_speed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_16"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:maxLines="@integer/single_line"
                android:singleLine="true"
                android:textColor="@color/colorTextRegularSecondary"
                android:textSize="@dimen/text_small_body"
                app:fontFamily="@font/semi_bold"
                app:layout_constraintBottom_toTopOf="@+id/text_view_ranking_points"
                app:layout_constraintEnd_toStartOf="@+id/text_view_action"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_price"
                app:textAllCaps="false"
                tools:text="Speed: 50" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_ranking_points"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_16"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:maxLines="@integer/single_line"
                android:singleLine="true"
                android:textColor="@color/colorTextRegularSecondary"
                android:textSize="@dimen/text_small_body"
                app:fontFamily="@font/semi_bold"
                app:layout_constraintBottom_toTopOf="@+id/text_view_consumer_ranking_points"
                app:layout_constraintEnd_toStartOf="@+id/text_view_action"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_speed"
                app:textAllCaps="false"
                tools:text="Ranking points: 20" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_consumer_ranking_points"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_16"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:maxLines="2"
                android:singleLine="false"
                android:textColor="@color/colorTextRegularSecondary"
                android:textSize="@dimen/text_small_body"
                app:fontFamily="@font/semi_bold"
                app:layout_constraintBottom_toTopOf="@+id/view_separator"
                app:layout_constraintEnd_toStartOf="@+id/text_view_action"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_ranking_points"
                app:textAllCaps="false"
                tools:text="Consumer ranking points: 10" />

            <View
                android:id="@+id/view_separator"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginBottom="@dimen/margin_16"
                android:background="@color/colorMyWalletsTabSeparator"
                app:layout_constraintBottom_toTopOf="@+id/text_view_starting_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_consumer_ranking_points" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_starting_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_16"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:maxLines="@integer/single_line"
                android:singleLine="true"
                android:textColor="@color/colorTextRegularSecondary"
                android:textSize="@dimen/text_small_body"
                app:fontFamily="@font/semi_bold"
                app:layout_constraintEnd_toStartOf="@+id/text_view_day_amount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_separator"
                app:textAllCaps="false"
                tools:text="Starting date: 28/08/2019" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_ending_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_16"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:maxLines="@integer/single_line"
                android:singleLine="true"
                android:textColor="@color/colorTextRegularSecondary"
                android:textSize="@dimen/text_small_body"
                app:fontFamily="@font/semi_bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/text_view_day_amount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_starting_date"
                app:textAllCaps="false"
                tools:text="Ending date: 29/08/2019" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_day_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_8"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:maxLines="@integer/single_line"
                android:singleLine="true"
                android:textColor="@color/colorTextRegular"
                android:textSize="@dimen/text_headline"
                app:fontFamily="@font/bold"
                app:layout_constraintBottom_toBottomOf="@+id/text_view_days_left"
                app:layout_constraintEnd_toStartOf="@+id/text_view_days_left"
                app:layout_constraintStart_toEndOf="@+id/text_view_starting_date"
                app:layout_constraintTop_toTopOf="@+id/text_view_days_left"
                app:textAllCaps="false"
                tools:text="13" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_days_left"
                android:layout_width="@dimen/width_50"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:gravity="center"
                android:textColor="@color/colorTextRegular"
                android:textSize="@dimen/text_body"
                app:fontFamily="@font/semi_bold"
                android:text="@string/software_license_days_left"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/text_view_day_amount"
                app:layout_constraintTop_toBottomOf="@+id/view_separator"
                app:textAllCaps="false"
                tools:text="days left" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>