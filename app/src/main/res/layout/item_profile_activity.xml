<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDarkBackground"
        android:padding="@dimen/padding_16">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_0"
            android:layout_marginEnd="@dimen/margin_4"
            android:ellipsize="end"
            android:fontFamily="@font/semi_bold"
            android:gravity="start|center_vertical"
            android:maxLines="2"
            android:singleLine="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_body"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_view_ip_address"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:textAllCaps="false"
            tools:text="Login" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_ip_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginEnd="@dimen/margin_4"
            android:ellipsize="end"
            android:fontFamily="@font/regular"
            android:gravity="start|center_vertical"
            android:maxLines="@integer/single_line"
            android:singleLine="true"
            android:textColor="@color/colorTextRegular"
            android:textSize="@dimen/text_small_body"
            app:layout_constraintBottom_toTopOf="@+id/text_view_source"
            app:layout_constraintEnd_toStartOf="@+id/text_view_location"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toEndOf="@+id/text_view_action"
            app:layout_constraintTop_toTopOf="parent"
            app:textAllCaps="false"
            tools:text="192.168.31.1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_source"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/regular"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/colorTextRegular"
            android:textSize="@dimen/text_small_body"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/text_view_ip_address"
            app:layout_constraintStart_toStartOf="@+id/text_view_ip_address"
            app:layout_constraintTop_toBottomOf="@+id/text_view_ip_address"
            app:textAllCaps="false"
            tools:text="Web" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginEnd="@dimen/margin_0"
            android:ellipsize="end"
            android:fontFamily="@font/semi_bold"
            android:gravity="start|center_vertical"
            android:maxLines="@integer/single_line"
            android:singleLine="true"
            android:textColor="@color/colorTextRegular"
            android:textSize="@dimen/text_body"
            app:layout_constraintBottom_toTopOf="@+id/text_view_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="4"
            app:layout_constraintStart_toEndOf="@+id/text_view_ip_address"
            app:layout_constraintTop_toTopOf="parent"
            app:textAllCaps="false"
            tools:text="Portugal" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/regular"
            android:gravity="start|center_vertical"
            android:maxLines="@integer/single_line"
            android:singleLine="true"
            android:textColor="@color/colorTextRegularSecondary"
            android:textSize="@dimen/text_small_body"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/text_view_location"
            app:layout_constraintStart_toStartOf="@+id/text_view_location"
            app:layout_constraintTop_toBottomOf="@+id/text_view_location"
            app:textAllCaps="false"
            tools:text="2019-09-02 09:21" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>